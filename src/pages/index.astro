---
import BackToTop from '@components/BackToTop.astro';
import { CTA } from '@partials/CTA';
import { Hero } from '@partials/Hero';
import { RecentOssProjects } from '@partials/RecentOssProjects';
import { RecentPosts } from '@partials/RecentPosts';
import { RecentProjects } from '@partials/RecentProjects';
import Base from '@templates/Base.astro';
import { AppConfig } from '@utils/AppConfig';
import { sortPostByDate, sortProjectsByDate } from '@utils/Posts';
import type { IFrontmatter } from 'astro-boilerplate-components';

import type { Project } from '../types/project';

interface BlogPostFrontmatter extends IFrontmatter {
  url: string;
}

const allPosts = await Astro.glob<BlogPostFrontmatter>('./posts/*.md');
const sortedPosts = sortPostByDate(allPosts);
const lastThreePosts = sortedPosts.slice(0, 3);
const allProjects = await Astro.glob<Project>('./projects/*.md');
const sortedProjects = sortProjectsByDate(allProjects);
const openSourceProjects = sortedProjects
  .filter((project) => project.frontmatter.openSource)
  .slice(0, 4);
const myProjects = sortedProjects
  .filter((project) => !project.frontmatter.openSource)
  .slice(0, 3);

const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <Hero />
  <RecentProjects projectList={myProjects} />
  <RecentOssProjects projectList={openSourceProjects} />
  <RecentPosts postList={lastThreePosts} />
  <CTA />
  <BackToTop />
</Base>
